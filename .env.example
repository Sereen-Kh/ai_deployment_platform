# Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Google Gemini API Key (FREE tier available!)
# Get your free API key at: https://ai.google.dev/
# =============================================================================
GEMINI_API_KEY=AIzaSyDsdT7kJ4qHKDIvf3llU_8qFU9A_b45Qk0
GEMINI_MODEL=gemini-1.5-flash
GEMINI_EMBEDDING_MODEL=models/text-embedding-004

# =============================================================================
# OPTIONAL: Additional LLM Providers
# =============================================================================
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key

# Default LLM provider (gemini, openai, or anthropic)
DEFAULT_LLM_PROVIDER=gemini

# =============================================================================
# REQUIRED: Security
# =============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ai_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ai_platform

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Qdrant Configuration
# =============================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# JWT Settings
# =============================================================================
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS Settings (comma-separated origins)
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
